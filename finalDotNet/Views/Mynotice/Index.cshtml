
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<finalDotNet.noticetable>
    <head>
        <script>
 
        </script>
        <style>
            a {
            color:chocolate;
            }
        </style>
    </head>
<h1 class="col-md-offset-5">我的公告</h1>
@Html.ActionLink("添加公告","Addnotice")
<div>
    <table class="table table-hover">
        <tr>
            <th>标题</th>
            <th>类型</th>
            <th>时间</th>
            <th>审核状态</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.title</td>
                <td>@item.kind</td>
                <td>@item.submitTime</td>
                @{
                    if (item.isApproved == 0)
                    {
                        <td>未通过</td>
                    }
                    else
                    {
                        <td>已通过</td>

                    }

                }
               
                <td>
                    @{
                        if (item.isApproved == 0)
                        {
                            <a href="Mynotice\Detail\@item.id">详细</a>
                            <a href="Mynotice\Modified\@item.id">修改</a>

                        }
                        else
                        {
                            <a href="Mynotice\Detail\@item.id">详细</a>

                        }

                    }


                </td>
            </tr>

        }
    </table>
</div>



