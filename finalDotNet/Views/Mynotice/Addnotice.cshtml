
@{
    ViewBag.Title = "添加公告";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        .error {
            margin-left: 8px;
        }
    </style>

</head>
@model finalDotNet.noticetable
<h1 class="text-center">添加公告</h1>
@using (Html.BeginForm("Addnotice", "Mynotice", FormMethod.Post, new { @class = "form-group",id="addnotice"}))
{
    <div class=" form-inline">
        @*<label for="title" class="control-label col-md-1">标题</label>*@
        <div class="">
            <label for="title" class="control-label col-md-1">标题</label>

            @*<input type="text" class="form-control input-validation-error" id="title" name="title" >*@
            @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control required",@placeholder= "标题字数长度为3到30" } })
            @Html.ValidationMessageFor(model => model.title)


        </div>
    </div>
    <div class=" form-group">
        <label for="kind" class="control-label col-md-1"> 类型 </label>
        @*<select class="form-control" id="kind" name="kind">
            <option>all</option>
            <option>寻人</option>
            <option>寻物</option>
        </select>*@
        <input class="form-control" id="kind" name="kind" />
    </div>
    <div class="form-group form-inline">
        <label for="content" class="control-label col-md-1">内容</label>
        <textarea class="form-control input-validation-error required" rows="3" id="content" name="content"></textarea>
        @Html.ValidationMessageFor(model => model.content)


    </div>

    <input type="submit" value="提交" class="btn btn-default" id="submit" />



}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script>
    $(document).ready(function () {
        $("#addnotice").validate({
            rules: {
                title: {
                    required: true,
                    minlength:3
                },
                content: {
                    required: true,
                    minlength:5
                }
            },
            messages: {
                title: {
                    required: "必填",
                    minlength:"最少三个字",
                },
                content: {
                    required: "必填",
                    minlength:"最少五个字"
                }
            }

        })
    })
</script>